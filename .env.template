# GitHub Token for GitHub MCP Server  
# Generate at: https://github.com/settings/tokens
# Required scopes: repo, workflow (optional)
GITHUB_TOKEN=your-github-token-here

# ODOO 17 Database URL
# Use host.docker.internal to connect to host's PostgreSQL
# Default: postgresql://username:password@host.docker.internal:5432/postgres
# Format: postgresql://username:password@host.docker.internal:5432/dbname
DATABASE_URL=postgresql://username:password@host.docker.internal:5432/dbname

# Octagon API Key for Deep Research MCP Server
# Get your API key from: https://docs.octagonagents.com
OCTAGON_API_KEY=your-octagon-api-key-here

# MSSQL Server Configuration for Sage_MSSQL MCP Server
# Default values are provided - update as needed
MSSQL_SERVER=your-mssql-server
MSSQL_DATABASE=your-database
MSSQL_USER=your-username
MSSQL_PASSWORD=your-password

# Odoo MCP Server Configuration (works with Odoo v12-v17+)
# Connect to any Odoo instance via XML-RPC/JSON-RPC
ODOO_MCP_URL=http://localhost:8069
ODOO_MCP_DB=odoo
ODOO_MCP_USER=admin
ODOO_MCP_PASSWORD=admin
ODOO_MCP_PROTOCOL=xmlrpc
ODOO_MCP_LOG_LEVEL=INFO

# Odoo 16 MCP Server Configuration
# For accessing Odoo v16 instance during migrations
ODOO16_URL=http://localhost:8069
ODOO16_DB=odoo16_database
ODOO16_USER=admin
ODOO16_PASSWORD=admin
ODOO16_PROTOCOL=xmlrpc
ODOO16_LOG_LEVEL=INFO

# Odoo 17 MCP Server Configuration  
# For accessing Odoo v17 instance during migrations
ODOO17_URL=http://localhost:8070
ODOO17_DB=odoo17_database
ODOO17_USER=admin
ODOO17_PASSWORD=admin
ODOO17_PROTOCOL=xmlrpc
ODOO17_LOG_LEVEL=INFO

# WordPress MCP Server Configuration
# Connect to WordPress sites via REST API
WORDPRESS_URL=http://localhost
WORDPRESS_USERNAME=admin
WORDPRESS_PASSWORD=password
WORDPRESS_AUTH_TYPE=basic

# Elementor MCP Server Configuration
# Connect to WordPress sites with Elementor via natural language
ELEMENTOR_URL=http://localhost
ELEMENTOR_USERNAME=admin
ELEMENTOR_PASSWORD=password
ELEMENTOR_AUTH_TYPE=basic
ELEMENTOR_API_KEY=

# WhatsApp Cloud API Configuration
# Get these from Meta Developer Console: https://developers.facebook.com
# Required: Create a WhatsApp Business App and get credentials
WHATSAPP_ACCESS_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_BUSINESS_ACCOUNT_ID=
WHATSAPP_WEBHOOK_VERIFY_TOKEN=mcp_webhook_verify_token
WHATSAPP_WEBHOOK_URL=https://your-domain.com/webhook/whatsapp